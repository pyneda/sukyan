<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OpenAPI Scan Report - Sukyan</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/fuse.js@6.6.2/dist/fuse.min.js"></script>
    <style>
        ::-webkit-scrollbar { width: 8px; height: 8px; }
        ::-webkit-scrollbar-track { background: #1f2937; }
        ::-webkit-scrollbar-thumb { background: #4b5563; border-radius: 4px; }
        ::-webkit-scrollbar-thumb:hover { background: #6b7280; }
        
        .fade-in { animation: fadeIn 0.3s ease-in-out; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
        
        pre { white-space: pre-wrap; word-wrap: break-word; tab-size: 2; }
        
        .method-get { background: linear-gradient(135deg, #10b981 0%, #059669 100%); }
        .method-post { background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); }
        .method-put { background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); }
        .method-patch { background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); }
        .method-delete { background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%); }
        
        .glass-card {
            background: rgba(31, 41, 55, 0.8);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(75, 85, 99, 0.4);
        }
        
        .header-key { color: #93c5fd; }
        .header-value { color: #fcd34d; }
        .json-key { color: #93c5fd; }
        .json-string { color: #86efac; }
        .json-number { color: #fcd34d; }
        .json-boolean { color: #f472b6; }
        .json-null { color: #9ca3af; }
    </style>
</head>
<body class="bg-gray-900 text-gray-200 min-h-screen">
    <!-- Header -->
    <div class="bg-gradient-to-r from-gray-800 via-gray-800 to-gray-900 sticky top-0 z-20 shadow-2xl border-b border-gray-700/50">
        <div class="w-full px-6 py-5 flex justify-between items-center">
            <div class="flex items-center gap-4">
                <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                </div>
                <div>
                    <h1 class="text-2xl font-bold text-white">OpenAPI Scan Report</h1>
                    <p class="text-sm text-gray-400">Generated by Sukyan Security Scanner</p>
                </div>
            </div>
            <div class="flex items-center gap-6">
                <div class="text-right">
                    <div class="text-2xl font-bold text-white" id="endpoint-count">0</div>
                    <div class="text-xs text-gray-400 uppercase tracking-wider">Endpoints</div>
                </div>
                <div class="text-right">
                    <div class="text-2xl font-bold text-blue-400" id="request-count">0</div>
                    <div class="text-xs text-gray-400 uppercase tracking-wider">Variations</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="w-full px-6 py-8 flex flex-col lg:flex-row gap-6">
        <!-- Sidebar -->
        <div class="lg:w-1/3 xl:w-1/4">
            <div class="glass-card rounded-xl shadow-xl sticky top-28 p-5">
                <div class="mb-5">
                    <div class="relative">
                        <input type="text" id="search-input" placeholder="Search endpoints..." 
                               class="w-full p-3 pl-11 border border-gray-600 rounded-lg bg-gray-800/50 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
                        <svg class="absolute left-4 top-3.5 h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                    </div>
                    <div class="flex items-center justify-between mt-3">
                        <span class="text-sm text-gray-400" id="count-display">Loading...</span>
                        <select id="method-filter" class="bg-gray-800 border border-gray-600 text-sm rounded-lg px-3 py-1.5 focus:ring-blue-500 focus:border-blue-500">
                            <option value="all">All Methods</option>
                            <option value="GET">GET</option>
                            <option value="POST">POST</option>
                            <option value="PUT">PUT</option>
                            <option value="PATCH">PATCH</option>
                            <option value="DELETE">DELETE</option>
                        </select>
                    </div>
                </div>
                <div id="endpoints-list" class="space-y-2 max-h-[calc(100vh-320px)] overflow-y-auto pr-2"></div>
            </div>
        </div>

        <!-- Main Panel -->
        <div class="lg:w-2/3 xl:w-3/4">
            <div id="details-container" class="glass-card rounded-xl shadow-xl p-6 min-h-[600px]">
                <div class="flex flex-col items-center justify-center h-96 text-gray-500">
                    <svg class="w-16 h-16 mb-4 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    <h2 class="text-xl font-medium">Select an endpoint</h2>
                    <p class="mt-2 text-sm">Choose from the list to view request variations</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast -->
    <div id="toast" class="fixed bottom-6 right-6 bg-gradient-to-r from-green-600 to-emerald-600 text-white px-6 py-3 rounded-lg shadow-xl transform translate-y-20 opacity-0 transition-all duration-300 z-50 flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        <span id="toast-message">Copied to clipboard</span>
    </div>

    <script>
        const endpoints = {{ .Endpoints | toJSON }};
        
        const listContainer = document.getElementById('endpoints-list');
        const detailsContainer = document.getElementById('details-container');
        const searchInput = document.getElementById('search-input');
        const methodFilter = document.getElementById('method-filter');

        // Calculate totals
        let totalEndpoints = endpoints.length;
        let totalRequests = endpoints.reduce((sum, ep) => sum + (ep.requests ? ep.requests.length : 0), 0);
        document.getElementById('endpoint-count').textContent = totalEndpoints;
        document.getElementById('request-count').textContent = totalRequests;

        function getMethodClass(method) {
            const classes = {
                'GET': 'method-get',
                'POST': 'method-post',
                'PUT': 'method-put',
                'PATCH': 'method-patch',
                'DELETE': 'method-delete'
            };
            return classes[method.toUpperCase()] || 'bg-gray-600';
        }

        function showToast(message) {
            const toast = document.getElementById('toast');
            document.getElementById('toast-message').textContent = message;
            toast.classList.remove('translate-y-20', 'opacity-0');
            toast.classList.add('translate-y-0', 'opacity-100');
            setTimeout(() => {
                toast.classList.remove('translate-y-0', 'opacity-100');
                toast.classList.add('translate-y-20', 'opacity-0');
            }, 2500);
        }

        function copyToClipboard(text, message) {
            message = message || 'Copied to clipboard';
            navigator.clipboard.writeText(text).then(() => showToast(message)).catch(err => {
                console.error('Failed to copy:', err);
                showToast('Failed to copy');
            });
        }

        function decodeBody(body) {
            if (!body) return null;
            try {
                return atob(body);
            } catch {
                return body;
            }
        }

        function generateCurl(method, url, headers, body) {
            let curl = `curl -k -X ${method} '${url}'`;
            if (headers) {
                for (const [key, value] of Object.entries(headers)) {
                    curl += ` \\\n  -H '${key}: ${value}'`;
                }
            }
            if (body) {
                const bodyStr = decodeBody(body);
                if (bodyStr) {
                    curl += ` \\\n  -d '${bodyStr.replace(/'/g, "\\'")}'`;
                }
            }
            return curl;
        }

        function escapeHtml(str) {
            if (!str) return '';
            return String(str).replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;').replace(/"/g, '&quot;');
        }

        function formatHeaders(headers) {
            if (!headers || Object.keys(headers).length === 0) return '<span class="text-gray-500 italic">No headers</span>';
            let html = '';
            for (const [key, value] of Object.entries(headers)) {
                html += `<div class="py-1"><span class="header-key">${escapeHtml(key)}</span><span class="text-gray-500">:</span> <span class="header-value">${escapeHtml(value)}</span></div>`;
            }
            return html;
        }

        function syntaxHighlightJson(jsonStr) {
            if (!jsonStr) return '';
            try {
                const obj = typeof jsonStr === 'string' ? JSON.parse(jsonStr) : jsonStr;
                jsonStr = JSON.stringify(obj, null, 2);
            } catch {}
            jsonStr = escapeHtml(jsonStr);
            return jsonStr.replace(/("(\\u[a-zA-Z0-9]{4}|\\[^u]|[^\\"])*"(\s*:)?|\b(true|false|null)\b|-?\d+(?:\.\d*)?(?:[eE][+\-]?\d+)?)/g, function (match) {
                let cls = 'json-number';
                if (/^"/.test(match)) {
                    if (/:$/.test(match)) {
                        cls = 'json-key';
                        match = match.slice(0, -1) + '<span class="text-gray-500">:</span>';
                    } else {
                        cls = 'json-string';
                    }
                } else if (/true|false/.test(match)) {
                    cls = 'json-boolean';
                } else if (/null/.test(match)) {
                    cls = 'json-null';
                }
                return `<span class="${cls}">${match}</span>`;
            });
        }

        function renderList(items) {
            listContainer.innerHTML = '';
            items.forEach((ep) => {
                const el = document.createElement('div');
                el.className = 'p-3 bg-gray-800/50 rounded-lg cursor-pointer hover:bg-gray-700/50 transition-all border border-transparent hover:border-gray-600 group';
                el.innerHTML = `
                    <div class="flex items-center gap-3">
                        <span class="px-2 py-1 text-xs font-bold text-white rounded ${getMethodClass(ep.method)} shadow-lg">${ep.method}</span>
                        <span class="text-gray-200 font-medium truncate flex-1">${ep.path}</span>
                    </div>
                    <div class="text-xs text-gray-500 mt-2 truncate">${ep.summary || 'No summary'}</div>
                    <div class="flex items-center gap-2 mt-2 text-xs text-gray-600">
                        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"/></svg>
                        ${ep.requests ? ep.requests.length : 0} variations
                    </div>
                `;
                el.onclick = () => {
                    document.querySelectorAll('#endpoints-list > div').forEach(d => d.classList.remove('ring-2', 'ring-blue-500'));
                    el.classList.add('ring-2', 'ring-blue-500');
                    showDetails(ep);
                };
                listContainer.appendChild(el);
            });
            document.getElementById('count-display').textContent = `${items.length} endpoints`;
        }

        // Store current endpoint for event handlers
        let currentEndpoint = null;

        function showDetails(ep) {
            currentEndpoint = ep;
            const requests = ep.requests || [];
            
            let html = `
                <div class="fade-in">
                    <!-- Header -->
                    <div class="flex items-start justify-between mb-6 pb-6 border-b border-gray-700/50">
                        <div class="flex-1">
                            <div class="flex items-center gap-3 mb-3">
                                <span class="px-3 py-1.5 text-sm font-bold text-white rounded-lg ${getMethodClass(ep.method)} shadow-lg">${ep.method}</span>
                                <code class="text-xl text-gray-100 font-mono">${ep.path}</code>
                            </div>
                            <p class="text-gray-400">${ep.summary || 'No summary available'}</p>
                            ${ep.description ? `<p class="text-gray-500 text-sm mt-2">${ep.description}</p>` : ''}
                        </div>
                        <div class="text-right">
                            <div class="text-3xl font-bold text-blue-400">${requests.length}</div>
                            <div class="text-xs text-gray-500 uppercase">Variations</div>
                        </div>
                    </div>`;

            // Parameters Info
            if (ep.parameters && ep.parameters.length > 0) {
                html += `
                    <div class="mb-6">
                        <h3 class="text-sm font-semibold text-gray-400 uppercase tracking-wider mb-3">Parameters</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-2">
                            ${ep.parameters.map(p => `
                                <div class="flex items-center gap-2 p-2 bg-gray-800/50 rounded-lg text-sm">
                                    <span class="px-1.5 py-0.5 text-xs rounded ${p.in === 'path' ? 'bg-purple-900/50 text-purple-300' : p.in === 'query' ? 'bg-blue-900/50 text-blue-300' : p.in === 'body' ? 'bg-green-900/50 text-green-300' : 'bg-gray-700 text-gray-300'}">${p.in}</span>
                                    <span class="text-gray-200 font-medium">${p.name}</span>
                                    ${p.required ? '<span class="text-red-400 text-xs">*</span>' : ''}
                                </div>
                            `).join('')}
                        </div>
                    </div>`;
            }

            // Request Variations
            html += `<div class="space-y-4"><h3 class="text-sm font-semibold text-gray-400 uppercase tracking-wider mb-3">Request Variations</h3>`;

            requests.forEach((req, idx) => {
                const bodyDecoded = req.body ? decodeBody(req.body) : null;
                const hasHeaders = req.headers && Object.keys(req.headers).length > 0;
                
                html += `
                    <div class="bg-gray-800/30 rounded-xl border border-gray-700/50 overflow-hidden">
                        <!-- Variation Header -->
                        <div class="flex items-center justify-between p-4 bg-gray-800/50 border-b border-gray-700/30">
                            <div class="flex items-center gap-3">
                                <span class="w-8 h-8 flex items-center justify-center rounded-full bg-gray-700 text-sm font-bold text-gray-300">${idx + 1}</span>
                                <span class="px-3 py-1 rounded-full text-xs font-medium ${req.label && req.label.includes('Fuzz') ? 'bg-orange-900/50 text-orange-300' : 'bg-green-900/50 text-green-300'}">${escapeHtml(req.label || 'Request')}</span>
                            </div>
                            <button data-action="copy-curl" data-index="${idx}" 
                                    class="flex items-center gap-2 px-3 py-1.5 bg-gray-700 hover:bg-gray-600 rounded-lg text-sm transition-colors">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/></svg>
                                Copy cURL
                            </button>
                        </div>

                        <!-- URL -->
                        <div class="p-4 border-b border-gray-700/30">
                            <div class="flex items-center justify-between mb-2">
                                <span class="text-xs text-gray-500 uppercase font-semibold tracking-wider">URL</span>
                                <button data-action="copy-url" data-index="${idx}" class="text-xs text-gray-500 hover:text-gray-300 flex items-center gap-1">
                                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/></svg>
                                    Copy
                                </button>
                            </div>
                            <code class="block p-3 bg-gray-900/50 rounded-lg text-sm text-green-400 font-mono break-all">${escapeHtml(req.url)}</code>
                        </div>

                        <!-- Headers -->
                        <div class="p-4 ${bodyDecoded ? 'border-b border-gray-700/30' : ''}">
                            <div class="flex items-center justify-between mb-2">
                                <span class="text-xs text-gray-500 uppercase font-semibold tracking-wider">Headers</span>
                                ${hasHeaders ? `<button data-action="copy-headers" data-index="${idx}" class="text-xs text-gray-500 hover:text-gray-300 flex items-center gap-1">
                                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/></svg>
                                    Copy
                                </button>` : ''}
                            </div>
                            <div class="p-3 bg-gray-900/50 rounded-lg font-mono text-sm">
                                ${formatHeaders(req.headers)}
                            </div>
                        </div>`;

                // Body
                if (bodyDecoded) {
                    html += `
                        <div class="p-4">
                            <div class="flex items-center justify-between mb-2">
                                <span class="text-xs text-gray-500 uppercase font-semibold tracking-wider">Body</span>
                                <button data-action="copy-body" data-index="${idx}" class="text-xs text-gray-500 hover:text-gray-300 flex items-center gap-1">
                                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/></svg>
                                    Copy
                                </button>
                            </div>
                            <pre class="p-3 bg-gray-900/50 rounded-lg text-sm overflow-x-auto">${syntaxHighlightJson(bodyDecoded)}</pre>
                        </div>`;
                }

                html += `</div>`;
            });

            html += `</div></div>`;
            detailsContainer.innerHTML = html;

            // Attach event handlers
            detailsContainer.querySelectorAll('[data-action]').forEach(btn => {
                btn.addEventListener('click', handleCopyAction);
            });
        }

        function handleCopyAction(e) {
            const btn = e.currentTarget;
            const action = btn.dataset.action;
            const idx = parseInt(btn.dataset.index, 10);
            
            if (!currentEndpoint || !currentEndpoint.requests || !currentEndpoint.requests[idx]) return;
            
            const req = currentEndpoint.requests[idx];
            
            switch (action) {
                case 'copy-curl':
                    const curl = generateCurl(currentEndpoint.method, req.url, req.headers, req.body);
                    copyToClipboard(curl, 'cURL copied!');
                    break;
                case 'copy-url':
                    copyToClipboard(req.url, 'URL copied!');
                    break;
                case 'copy-headers':
                    if (req.headers) {
                        const headersStr = Object.entries(req.headers).map(([k, v]) => `${k}: ${v}`).join('\n');
                        copyToClipboard(headersStr, 'Headers copied!');
                    }
                    break;
                case 'copy-body':
                    if (req.body) {
                        copyToClipboard(decodeBody(req.body), 'Body copied!');
                    }
                    break;
            }
        }

        // Search & Filter
        const fuse = new Fuse(endpoints, { keys: ['path', 'method', 'summary'], threshold: 0.4 });
        
        function applyFilters() {
            const searchTerm = searchInput.value;
            const method = methodFilter.value;
            
            let filtered = endpoints;
            
            if (searchTerm) {
                filtered = fuse.search(searchTerm).map(r => r.item);
            }
            
            if (method !== 'all') {
                filtered = filtered.filter(ep => ep.method.toUpperCase() === method);
            }
            
            renderList(filtered);
        }

        searchInput.addEventListener('input', applyFilters);
        methodFilter.addEventListener('change', applyFilters);

        // Initial render
        renderList(endpoints);
    </script>
</body>
</html>
