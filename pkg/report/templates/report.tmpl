<html>
	<h1>
		{{ .title }}
	</h1>
<style>
.font-bold {
  font-weight: 700;
}
.card {
  /* Add shadows to create the "card" effect */
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  padding: 10px 10px;
  margin: 2rem 2rem;
}

/* On mouse-over, add a deeper shadow */
.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

/* Add some padding inside the card container */
.container {
  padding: 2px 16px;
  margin 2px 2px;
}

</style>

  <div style="max-width: 70%; margin: auto;">
  <h2>Issues</h2>
  {{ range $issue := .issues }}
    <div class="card">
      <div class="font-bold">
      {{ $issue.ID }} - {{ $issue.Title }}
      </div>
      <div class="container">
        <div>
          {{ $issue.Description }}
        </div>
          <div><span>Payload:</span>{{ $issue.Payload}}</div>
          <a href="{{$issue.URL}}" rel="noopener noreferrer">URL:{{$issue.URL}}</a>
      </div>
    </div>
  {{ end }}
  </div>
</html>